import java.util.*;

class Volume {
    // Cube
    public double findVolume(double side) {
        return side * side * side;
    }

    // Cuboid
    public double findVolume(double length, double breadth, double height) {
        return length * breadth * height;
    }

    // Cylinder
    public double findVolume(double radius, double height) {
        return Math.PI * radius * radius * height;
    }
}

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        String shape = sc.nextLine().trim().toLowerCase();
        Volume v = new Volume();

        double volume = 0.0;

        switch (shape) {
            case "cube":
                double side = sc.nextDouble();
                volume = v.findVolume(side);
                break;

            case "cuboid":
                double l = sc.nextDouble();
                double b = sc.nextDouble();
                double h = sc.nextDouble();
                volume = v.findVolume(l, b, h);
                break;

            case "cylinder":
                double r = sc.nextDouble();
                double ht = sc.nextDouble();
                volume = v.findVolume(r, ht);
                break;

            default:
                System.out.println("Invalid shape");
                return;
        }

        // Print volume rounded to 2 decimal places
        System.out.printf("%.2f", volume);
    }
}
