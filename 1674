import java.util.*;

class MaxMinDifference<T extends Number & Comparable<T>> {
    public double findDifference(List<T> list) {
        if (list == null || list.isEmpty()) return 0.0;

        T max = list.get(0);
        T min = list.get(0);

        for (T num : list) {
            if (num.compareTo(max) > 0) max = num;
            if (num.compareTo(min) < 0) min = num;
        }

        return max.doubleValue() - min.doubleValue();
    }
}

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int n = sc.nextInt();
        List<Double> numbers = new ArrayList<>();
        for (int i = 0; i < n; i++) {
            numbers.add(sc.nextDouble());
        }

        MaxMinDifference<Double> mmd = new MaxMinDifference<>();
        double difference = mmd.findDifference(numbers);

        System.out.printf("Difference: %.1f", difference);
    }
}

